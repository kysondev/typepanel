generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified Boolean   @default(false)
  image         String?
  role          ROLE      @default(user)
  usernameSet   Boolean   @default(false)
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  twoFactorEnabled Boolean?
  banned           Boolean?
  banReason        String?
  banExpires       DateTime?
  twofactors       TwoFactor[]
  chatbot          Chatbot[]
  chatSession      ChatSession[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model TwoFactor {
  id          String @id
  secret      String
  backupCodes String
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("twoFactor")
}

enum ROLE {
  user
  admin
}

model ModelProvider {
  id          String   @id @default(cuid())
  name        String
  providerKey String
  apiKeyEnc   String
  baseUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  models      Model[]

  @@map("modelProvider")
}

model Model {
  id             String   @id @default(cuid())
  name           String
  displayName    String?
  contextLength  Int?
  temperature    Float?
  inputCost      Float?
  outputCost     Float?
  providerId     String
  provider       ModelProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  chatbots       Chatbot[]

  @@map("model")
}

model Chatbot {
  id           String   @id @default(cuid())
  ownerId      String
  owner        User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  modelId      String
  model        Model    @relation(fields: [modelId], references: [id], onDelete: Restrict)
  name         String
  description  String?
  systemPrompt String   @default("")
  isPublic     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sessions     ChatSession[]
  knowledgeBases KnowledgeBase[]

  @@map("chatBot")
}

model ChatSession {
  id         String   @id @default(cuid())
  chatbotId  String
  chatbot    Chatbot  @relation(fields: [chatbotId], references: [id], onDelete: Cascade)
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  messages   ChatMessage[]

  @@map("chatSession")
}

model ChatMessage {
  id         String   @id @default(cuid())
  sessionId  String
  session    ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role       ChatRole
  content    String
  createdAt  DateTime @default(now())

  @@map("chatMessage")
}

enum ChatRole {
    user
    assistant
    system
}

model KnowledgeBase {
  id         String   @id @default(cuid())
  chatbotId  String
  chatbot    Chatbot  @relation(fields: [chatbotId], references: [id], onDelete: Cascade)
  name       String
  createdAt  DateTime @default(now())
  documents  KnowledgeDocument[]

  @@map("knowledgeBase")
}

model KnowledgeDocument {
  id          String   @id @default(cuid())
  kbId        String
  kb          KnowledgeBase @relation(fields: [kbId], references: [id], onDelete: Cascade)
  filename    String
  content     String
  createdAt   DateTime @default(now())

  @@map("knowledgeDocument")
}